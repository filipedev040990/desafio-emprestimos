{
    "openapi": "3.0.0",
    "info": {
        "title": "Loans",
        "description": "API que lista tipos de emprestimos disponíveis",
        "version": "1.0.0",
        "contact": {
            "email": "filipedev040990@gmail.com"
        }
    },
    "servers": [
        {
            "url": "/v1"
        }
    ],
    "tags": [
        {
            "name": "Loans"
        }
    ],
    "paths": {
        "/route/test": {
            "post": {
                "tags": [
                    "Loans"
                ],
                "operationId": "loans-identifier",
                "summary": "Busca emprestimos disponíveis",
                "description": "Busca emprestimos disponíveis de acordo com idade, renda e localização do cliente.",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "age": {
                                        "type": "number",
                                        "example": 30,
                                        "description": "Idade do cliente."
                                    },
                                    "cpf": {
                                        "type": "string",
                                        "example": "74125896332",
                                        "description": "CPF do cliente."
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "Joãozinho da Silva",
                                        "description": "Nome do cliente."
                                    },
                                    "income": {
                                        "type": "number",
                                        "example": 3500,
                                        "description": "Renda do cliente."
                                    },
                                    "location": {
                                        "type": "string",
                                        "example": "MG",
                                        "description": "Localização do cliente."
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "customer": {
                                            "type": "string",
                                            "example": "Joãozinho da Silva"
                                        },
                                        "loans": {
                                            "type": "array",
                                            "items": {
                                              "oneOf": [{
                                                "type": "object",
                                                "properties": {
                                                  "loanType": {
                                                    "type": "string",
                                                    "example": "PERSONAL"
                                                  },
                                                  "interestRate": {
                                                    "type": "number",
                                                    "example": 4
                                                  }
                                                }
                                              },{
                                                "type": "object",
                                                "properties": {
                                                  "loanType": {
                                                    "type": "string",
                                                    "example": "GUARANTEED"
                                                  },
                                                  "interestRate": {
                                                    "type": "number",
                                                    "example": 2
                                                  }
                                                }
                                              }]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro de validação da solicitação",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "MissingParamError",
                                    "message": "Missing param: age"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
